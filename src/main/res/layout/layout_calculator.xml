<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kalian">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/btn_copy"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:text="复制"
            android:textSize="20sp"
            android:background="@drawable/bg_circle_orange_btn"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp">
        </Button>
        <TextView
            android:id="@+id/tv_precision"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/btn_copy"
            android:background="@drawable/bg_circle_orange_btn"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            >

        </TextView>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="361dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_toRightOf="@+id/btn_copy"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="60sp"
            android:textColor="#000000"/>

    </RelativeLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:useDefaultMargins="true"
        android:orientation="horizontal"
        android:layout_below="@+id/relativeLayout">

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="sin"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_cos"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="cos"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_tan"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="tan"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_mi"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="^"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="C"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_reverse"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="+/-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_percent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="%"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_division"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="÷"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="2"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_three"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="3"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="×"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="4"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_five"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="5"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_six"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="6"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_subtraction"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="-"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_seven"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="7"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="8"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="9"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_addition"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="+"
            android:textSize="24sp"/>



        <Button
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="0"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="."
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="="
            android:textSize="24sp"/>






    </GridLayout>


</RelativeLayout>